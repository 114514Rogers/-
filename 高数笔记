\subsection{定积分在几何学上的应用}
\subsubsection{平面图形的面积}
\noindent

\textbf{直角坐标}：详见p276$\sim$p278。

\textbf{极坐标}：详见p278$\sim$p280。

\subsubsection{体积}

\noindent
旋转体的体积：p280$\sim$p282。

\noindent
平行截面面积为已知的立体的体积：p282$\sim$p284。
\subsubsection{平面曲线的弧长}

\begin{theorem}
	光滑曲线弧是可求长的。
\end{theorem}
\noindent
\textbf{参数方程}：$\begin{cases}x =\phi(t)\\y=\psi(t)\end{cases}$，（$\alpha \leq t \leq \beta$），弧长$s=\int_{\alpha}^{\beta}\sqrt{\phi'^2(t)+\psi'^2(t)}\text{d}t$。

\noindent
\textbf{直角坐标}：$y=f(x)$，（$a\leq x \leq b$），弧长$s=\int_{a}^{b}\sqrt{1+y'^2}\text{d} x$。

\noindent
\textbf{极坐标}：$\rho = \rho(\theta)$，（$\alpha \leq \theta \leq \beta$），弧长$s=\int_{\alpha}^{\beta}\sqrt{\rho^2(\theta)+\rho'^2(\theta)}\text{d}\theta$。

