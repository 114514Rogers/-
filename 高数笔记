\section{定积分}
\subsection{定积分的概念与性质}

\subsubsection{定积分问题举例}
\begin{itemize}
	\item 曲边梯形的面积
	\item 变速直线运动的路程
\end{itemize}

\subsubsection{定积分的定义}

\noindent
\textbf{Def}：

\noindent
设函数$f(x)$在$[a,b]$上有界，在$[a,b]$中任意插入若干个分点：
\begin{equation}
	a = x_0 < x_1<x_2 <\cdots< x_{n-1}<x_{n}=b
	\notag
\end{equation}

\noindent
将$[a,b]$分成$n$个小区间：

\begin{equation}
	[x_0,x_1],[x_1,x_2],\cdots,[x_{n-1},x_n]
	\notag
\end{equation}

\noindent
各小区间长度：
\begin{equation}
	\Delta{x_1} = x_1- x_0,\Delta{x_2} = x_2 -x_1,\cdots,\Delta{x_n}=x_n - x_{n-1}
	\notag
\end{equation}

\noindent
在每个小区间$[x_{i-1},x_i]$上任取一点$\xi_{i}$（$x_{i-1}\leq\xi_i\leq x_i$），作函数值$f(\xi_i)$与小区间长度$\Delta{x_i}$的乘积$f(\xi_{i})\Delta{x_i}$（$i=1,2,\cdots,n$），并作出和：

\begin{equation}
	S = \sum_{i=1}^{n}f(\xi_{i})\Delta{x_i}
	\notag
\end{equation}

记$\lambda = \max\{\Delta{x_1},\Delta{x_2},\cdots,\Delta{x_n}\}$，如果当$\lambda \rightarrow 0$时，这和的极限总存在，且与$[a,b]$的分法及点$\xi_{i}$的取法无关，那么称这个极限$I$为函数$f(x)$在$[a,b]$上的\underline{定积分}（简称\underline{积分}），

\noindent
记为：$\int_{a}^{b}f(x)\text{d} x$，即：
\begin{equation}
	\int_{a}^{b}f(x)\text{d}x = I = \lim\limits_{\lambda \rightarrow 0}\sum_{i=1}^{n}f(\xi_{i})\Delta{x_i}
	\notag
	\footnote[1]{$f(x)$：被积函数，$f(x)\text{d}x$：被积表达式，$x$：积分变量，$a$：积分下限，$b$：积分上限，$[a,b]$：积分区间。}
\end{equation}

\noindent
$\sum_{i=1}^{n}f(\xi_{i})\Delta{x_i}$通常称：$f(x)$的\underline{积分和}。

\noindent
如果$f(x)$在$[a,b]$上的定积分存在，那么就说$f(x)$在$[a,b]$上\underline{可积}。

\newpage

\noindent
$\bm{Q}$ ： \textbf{怎样$f(x)$在$[a,b]$上可积？}

\begin{theorem}
	$\ $
	
	设$f(x)$在$[a,b]$上连续，则$f(x)$在$[a,b]$上可积。
\end{theorem}



\begin{theorem}
	$\ $
	
	设$f(x)$在$[a,b]$上有界，且只有有限个间断点，则$f(x)$在$[a,b]$上可积。
\end{theorem}

\subsubsection{定积分的近似计算}

\noindent
详见p229$\sim$p232。

\subsubsection{定积分的性质}
\noindent
$b=a$时：$\int_{a}^{a} f(x) \text{d} x = 0$

\noindent
$a>b$时：$\int_{a}^{b}f(x)\text{d} x = -\int_{b}^{a}f(x)\text{d} x$

\begin{proposition}
	$\ $
	
	\noindent
	设$\alpha$与$\beta$均为常数，则：
	\begin{equation}
		\int_{a}^{b}\big[\alpha f(x) + \beta g(x)\big]\text{d} x = \alpha \int_{a}^{b}f(x)\text{d} x+\beta \int_{a}^{b} g(x)\text{d} x
		\notag
	\end{equation}
	
\end{proposition}
\begin{proposition}
	$\ $
	
	\noindent
	设$a<c<b$，则：
	\begin{equation}
		\int_{a}^{b}f(x)\text{d} x = \int_{a}^{c}f(x)\text{d} x+\int_{c}^{b}f(x)\text{d} x
		\notag
	\end{equation}
\end{proposition}


\begin{proposition}
	$\ $
	
	\noindent
	如果在$[a,b]$上$f(x)\equiv 1$，那么：
	\begin{equation}
		\int_{a}^{b}1 \text{d} x =\int_{a}^{b} \text{d} x = b-a
		\notag
	\end{equation}
	
\end{proposition}


\begin{proposition}
	$\ $
	
	\noindent
	如果在$[a,b]$上$f(x)\geq 0$，那么：
	
	\begin{equation}
		\int_{a}^{b}f(x)\text{d} x \geq 0
		\notag
	\end{equation}
\end{proposition}

\begin{corollary}
	$\ $
	
	\noindent
	如果在$[a,b]$上$f(x)\leq g(x)$，那么：
	
	\begin{equation}
		\int_{a}^{b}f(x)\text{d} x \leq \int_{a}^{b}g(x)\text{d} x
		\notag
	\end{equation}
\end{corollary}

\begin{corollary}
	\begin{equation}
		\Big|\int_{a}^{b}f(x)\text{d} x\Big| \leq \int_{a}^{b}\big |f(x)\big |\text{d} x\ \ (a<b)
		\notag
	\end{equation}
\end{corollary}

\begin{proposition}
	$\ $
	
	设$M$与$m$分别是$f(x)$在$[a,b]$上的最大值及最小值：
	
	\begin{equation}
		m(b-a)\leq \int_{a}^{b}f(x)\text{d} x \leq M(b-a)
		\notag
	\end{equation}
	
\end{proposition}

\begin{proposition}[定积分中值定理]
 	$\ $
 	
 	如果$f(x)$在积分区间$[a,b]$上连续，那么在$[a,b]$上至少存在一个点$\xi$，使下式成立：

 	\text{\footnotesize{\textbf{积分中值公式}}}
 	\begin{equation}
 		\int_{a}^{b}f(x)\text{d} x=f(\xi)(b-a)\text{，}(a\leq\xi \leq b)
 		\notag
 	\end{equation}
 	
 	
\end{proposition}

\noindent
其中，$f(\xi)=\frac{1}{b-a}\int_{a}^{b}f(x)\text{d} x$，为$f(x)$在$[a,b]$上的平均值。

\subsection{微积分基本公式}
\subsubsection{积分上限的函数及其导数}

\begin{equation}
	\phi(x) =\int_{a}^{x}f(t)\text{d}t,(a \leq x\leq b)
	\notag
\end{equation}

\begin{theorem}
	$\ $
	
	\noindent
	如果$f(x)$在$[a,b]$上连续，那么积分积分上限的函数：
	
	\begin{equation}
		\phi(x) =\int_{a}^{x}f(t)\text{d}t
		\notag
	\end{equation}
	
	\noindent
	在$[a,b]$上可导，并且它的导数：
	
	\begin{equation}
		\phi'(x) =\frac{\text{d}}{\text{d} x}\int_{a}^{x}f(t)\text{d}t=f(x)
		\notag
	\end{equation}
	
\end{theorem}

\begin{theorem}[原函数存在定理]
	$\ $
	
	\begin{enumerate}
		\item [1)]肯定了连续函数的原函数是存在的。
		\item [2)] 初步揭示了积分学中的定积分与原函数之间的连续。
	\end{enumerate}
\end{theorem}

\begin{theorem}
	$\ $
	
	\noindent
	如果$f(x)$在$[a,b]$上连续，那么：
	\begin{equation}
		\phi(x) =\int_{a}^{x}f(t)\text{d}t
		\notag
	\end{equation}
	
	\noindent
	就是$f(x)$在$[a,b]$上的一个原函数。
\end{theorem}

\subsubsection{牛顿-莱布尼茨公式}
\begin{theorem}[微积分基本定理]
	$\ $
	
	\noindent
	如果$F(x)$是连续函数$f(x)$在$[a,b]$上的一个原函数，那么：
	
	\text{\footnotesize{\textcolor{red}{微积分基本公式}}}
	\begin{equation}
		\int_{a}^{b}f(x)\text{d}x=F(b)-F(a)
		\notag
	\end{equation}
	
\end{theorem}

\subsection{定积分的换元法和分部积分法}
\subsubsection{定积分的换元法}

\begin{theorem}
	$\ $
	
	\noindent
	假设$f(x)$在$[a,b]$上连续，函数$x = \phi(t)$满足条件：
	\begin{enumerate}
		\item [1)] $\phi(\alpha) =a $，$\phi(\beta)=b$
		\item [2)] $\phi(t)$在$[\alpha,\beta]$（或$[\beta,\alpha]$）上具有连续导数，且其值域$R_{\phi}=[a,b]$，则有：
		
		{\footnotesize{\textbf{定积分的换元公式}}}
		\begin{equation}
			\int_{a}^{b}f(x)\text{d}x=\int_{\alpha}^{\beta}f\big[\phi(t)\big]\phi'(t)\text{d} t
			\notag
		\end{equation}
	\end{enumerate}
\end{theorem}

\noindent
应用时，有两点需注意。
\begin{enumerate}
	\item [(1)]用$x=\phi(t)$替代时，积分限要换为相对于$t$的积分限。
	\item [(2)] 求出$f\big[\phi(t)\big]\phi'(t)$的一个原函数$\phi(t)$后，不必像计算不定积分那样再把$\phi(t)$变换成原来变量$x$的函数，而只要把新变量$t$的上、下限分别代入$\phi(t)$中然后相减。
\end{enumerate}

\noindent
例题：p247$\sim$p252。

\subsubsection{定积分的分部积分法}

\noindent
这里给出简写形式为：
\begin{equation}
	\int_{a}^{b}uv'\text{d}x=\big[uv\big]\Big|_{a}^{b}-\int_{a}^{b}vu'\text{d}x
	\notag
\end{equation}


\noindent
当然大家可能更习惯这种形式：
\begin{equation}
	\int_{a}^{b}u\text{d}v =\big[uv\big]\Big|_{a}^{b}-\int_{a}^{b}v\text{d}u
	\notag
\end{equation}

\hrule
\hfill

\noindent
有需要记住的例子：$I_n =\int_{0}^{\frac{\pi}{2}}\sin^{n} x \text{d}x=\int_{0}^{\frac{\pi}{2}}\cos^{n}x\text{d}x$。

\noindent
有关系式：$I_n = \frac{n-1}{n}\cdot I_{n-2}$

\begin{equation}
	I_n = \frac{n-1}{n}\cdot I_{n-2}=\begin{cases}\frac{n-1}{n}\cdot \frac{n-3}{n-2}\cdots\cdot \frac{4}{5}\cdot \frac{2}{3}\ \ \ (\text{n为大于1的正奇数})\\
		\frac{n-1}{n}\cdot \frac{n-3}{n-2}\cdots\cdot \frac{3}{4}\cdot \frac{1}{2}\cdot \frac{\pi}{2}\ \ \ (\text{n为正偶数})\end{cases}
	\notag
\end{equation}

且$I_1 = 1,I_0 =\frac{\pi}{2}$。
如何推导可见：\href{https://zhuanlan.zhihu.com/p/369773487}[此处]。

\subsection{反常积分}

\noindent
反常积分分为两类：
\begin{itemize}
	\item 积分区间为无穷区间
	\item 被积函数与无界函数
\end{itemize}
\subsubsection{无穷限的反常积分}

\noindent
$\lim\limits_{t\rightarrow +\infty}\int_{a}^{t}f(x)\text{d}x$：$f(x)$在无穷区间$[a,+\infty)$上的反常积分。此积分记为：$\int_{a}^{+\infty}f(x)\text{d}x$。

\noindent
与之对应：$\int_{-\infty}^{b}f(x)\text{d}x=\lim\limits_{t\rightarrow -\infty}\int_{t}^{b}f(x)\text{d} x$，此积分称为$f(x)$在无穷区间$(-\infty,b]$上的反常积分。

\hfill
\hrule
\hfill

\noindent
对$\int_{a}^{+\infty}f(x)\text{d} x$收敛与发散的定义：
\begin{itemize}
	\item [(1)] 设$f(x)$在$[a,+\infty)$上连续，如果$\lim\limits_{t\rightarrow \infty}\int_{a}^{t}f(x)\text{d} x$\textbf{存在}，则称反常积分$\int_{a}^{+\infty}f(x)\text{d}x$\textbf{收敛}。并称此极限为该反常积分的值；
	
	
	若极限不存在，那么称反常积分$\int_{a}^{+\infty}f(x)\text{d}x$\textbf{发散}。
	
	\item [(2)] 将(1) 中的$\int_{a}^{+\infty}f(x)\text{d}x$改为：$\lim\limits_{t\rightarrow -\infty}\int_{t}^{b}f(x)\text{d} x$。
	
	\item [(3)] $f(x)$在无穷区间$(-\infty,+\infty)$上的反常积分：$\int_{-\infty}^{+\infty}f(x)\text{d} x=\int_{-\infty}^{0}f(x)\text{d} x+\int_{0}^{+\infty}f(x)\text{d}x$：\textbf{存在即收敛，不存在即发散}。
\end{itemize}

\subsubsection{无界函数的反常积分(瑕积分)}

\noindent
若$f(x)$在点$a$的任一邻域内都无界，那么点$a$称为$f(x)$的\underline{瑕点}（无界间断点）。

\hrule

\hfill

设$f(x)$在$(a,b]$上连续，点$a$为$f(x)$的瑕点，任取$t>a$，作定积分$\int_{t}^{b}f(x)\text{d}x$，再求极限：
\begin{equation}
	\lim\limits_{t\rightarrow a^{+}}\int_{t}^{b}f(x)\text{d} x = \int_{a}^{b}f(x)\text{d} x
	\notag
\end{equation}
等式左边被称为：函数$f(x)$在$(a,b]$上的反常积分。

\hfill
\hrule
\hfill

\noindent
\textbf{Def}：（此处较为简便）

\begin{enumerate}
	\item [(1)] $(a,b]$上$f(x)$连续，$a$为瑕点，如果$\lim\limits_{t\rightarrow a^{+}}\int_{t}^{b}f(x)\text{d} x = \int_{a}^{b}f(x)\text{d} x$存在，即收敛；不存在则发散。
	\item [(2)] $[a,b)$上$f(x)$连续，$b$为瑕点，如果$\lim\limits_{t\rightarrow b^{-}}\int_{a}^{t}f(x)\text{d} x=\int_{a}^{b}f(x)\text{d} x$存在，即收敛；不存在则发散。
	\item [(3)] $[a,c),(c,b]$上$f(x)$连续，c为瑕点，$\int_{a}^{b}f(x)\text{d} x = \int_{a}^{c}f(x)\text{d} x+\int_{c}^{b}f(x)\text{d} x$存在，即收敛；不存在即发散。
\end{enumerate}

\subsection{* 反常积分的审敛法     \ \   $\Gamma$函数}

\subsubsection{ 无穷限反常积分的审敛法}
\begin{theorem}
	$\ $
	
	设$f(x)$在$[a,+\infty)$上连续，且$f(x)\geq 0$。若$F(x) = \int_{a}^{x}f(t)\text{d}t$在$[a,+\infty)$上有上界，则反常积分$\int_{a}^{+\infty}f(x)\text{d}x$收敛。
\end{theorem}

\noindent
对于非负函数的无穷限的反常积分，有以下审敛定理：


\begin{theorem}[比较审敛原理]
	$\ $
	
	设$f(x),g(x)$，在$[a,+\infty)$上连续，若$0\leq f(x)\leq g(x)$，（$a\leq x \leq +\infty$），并且
	\begin{itemize}
		\item 如果$\int_{a}^{+\infty}g(x)\text{d}x$收敛，那么$\int_{a}^{+\infty}f(x)\text{d}x$也收敛；
		\item 如果$\int_{a}^{+\infty}f(x)\text{d} x$发散，则$\int_{a}^{+\infty}g(x)\text{d}x$也发散。
	\end{itemize}

\end{theorem}

\newpage

\noindent
\textbf{比较审敛法1}：

\noindent
设$f(x)$在$[a,+\infty)$（$a>0$）上连续，且$f(x)\geq 0$。

\begin{itemize}
	\item 若存在常数$M>0$及$p>1$，使得$f(x)\leq\frac{M}{x^{p}}$（$a\leq x ＜ +\infty$），那么反常积分$\int_{a}^{+\infty}f(x)\text{d} x$收敛；
	\item 如果存在常数$N>0$，使得$f(x)\geq \frac{N}{x}$（$a\leq x ＜ +\infty$），那么反常积分$\int_{a}^{+\infty}f(x)\text{d} x$发散。
	
\end{itemize}

\noindent
\textbf{极限审敛法1}：

\noindent
设$f(x)$在$[a,+\infty)$上连续，且$f(x)\geq 0$。
\begin{itemize}
	\item 如果存在常数$p>1$，使得：$\lim\limits_{x\rightarrow \infty}x^{p}f(x)=c<+\infty$，那么$\int_{a}^{+\infty}f(x)\text{d} x$收敛；
	\item 如果$\lim\limits_{x\rightarrow +\infty}xf(x)=d>0$（$d$可以为$+\infty$），那么$\int_{a}^{+\infty}f(x)\text{d} x$发散。
\end{itemize}

\begin{theorem}
	$\ $
	
	绝对收敛的反常积分$\int_{a}^{+\infty}f(x)\text{d} x$必定收敛。
	
	（另一种表达方式）
	
	设$f(x)$在$[a,+\infty)$上连续，如果$\int_{a}^{+\infty}\big|f(x)\big|\text{d} x$收敛，那么$\int_{a}^{+\infty}f(x)\text{d} x$也收敛。
\end{theorem}

​\subsubsection{无界函数的反常积分的审敛法}
\noindent
\textbf{比较审敛法2}：

\noindent
设$f(x)$在$(a,b]$上连续，且$f(x)\geq  0$，点$a$为$f(x)$的瑕点。
\begin{itemize}
	\item 如果存在常数$M>0$及$q<1$，使得$f(x)\leq \frac{M}{(x-a)^q}$（$a＜x\leq b$），那么$\int_{a}^{b}f(x)\text{d}x$收敛；
	\item 如果存在常数$N>0$，使$f(x)\geq \frac{N}{x-a}$（$a＜ x \leq b$），则$\int_{a}^{b}f(x)\text{d}x$发散。
\end{itemize}

\noindent
\textbf{极限审敛法2}：

\noindent
设$f(x)$在$(a,b]$上连续，且$f(x)\geq  0$，点$a$为$f(x)$的瑕点。

\begin{itemize}
	\item 如果存在常数$0<q＜ 1$，使$\lim\limits_{x\rightarrow a^{+}}(x-a)^{q}f(x)$存在，则$\int_{a}^{b}f(x)\text{d}x$收敛；
	\item 若$\lim\limits_{x\rightarrow a^{+}}(x-a)f(x)=d>0$（$d$可以为$+ \infty$）则$\int_{a}^{b}f(x)\text{d}x$发散。
\end{itemize}

\subsubsection{$\Gamma$函数}

\begin{equation}
	\Gamma(s) = \int_{0}^{+\infty}e^{-x}x^{s-1}\text{d}x，(s>0)
	\notag
\end{equation}

\noindent
$\Gamma(s)$对于$s>0$收敛，且$\Gamma(n+1)=n!$。
\begin{proposition}
	$\ $
	
	\begin{itemize}
		\item $\Gamma(s+1) = s\cdot \Gamma(s)$，（$s>0$）
		\item $s\rightarrow 0^{+}$时，$\Gamma(s) \rightarrow +\infty$
		\item \textbf{余元公式}：$\Gamma(s)\Gamma(1-s)=\frac{\pi}{\sin \pi s}$，（$0<s<1$）
		\item $\int_{0}^{+\infty}e^{-u^2}\text{d}u=\frac{\sqrt{\pi}}{2}$
	\end{itemize}
\end{proposition}

\newpage

\section{定积分的应用}
\subsection{定积分的元素法}

